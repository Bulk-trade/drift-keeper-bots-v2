{
	"compilerOptions": {
		"types": [],
		"module": "commonjs",
		"target": "es2019",
		"esModuleInterop": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"baseUrl": ".",
		// "rootDir": "src",
		"rootDirs": [
			"src",
			"market_making_examples"
		],
		"outDir": "./lib"
	},
	"include": [
		"src/**/*",
		"market_making_examples/**/*"
	],
	"exclude": [
		"node_modules"
	]
}